<UserControl x:Class="ElPerrito.WPF.Views.CartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#3498DB" CornerRadius="5" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="â¬… Volver a la Tienda"
                        Command="{Binding BackToShopCommand}"
                        Background="Transparent" Foreground="White"
                        FontSize="14" FontWeight="Bold"
                        BorderThickness="1" BorderBrush="White"
                        Padding="15,8" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Mi Carrito de Compras"
                             FontSize="24" FontWeight="Bold"
                             Foreground="White" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="Total de Items:" FontSize="12" Foreground="#ECF0F1"/>
                    <TextBlock Text="{Binding TotalItems}" FontSize="20" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista de productos en el carrito -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Mensaje si el carrito estÃ¡ vacÃ­o -->
                <Border Background="#F8F9FA" BorderBrush="#BDC3C7" BorderThickness="1"
                        CornerRadius="5" Padding="40" Margin="0,20,0,20"
                        Visibility="{Binding IsCartEmpty, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ›’" FontSize="60" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Tu carrito estÃ¡ vacÃ­o" FontSize="20" FontWeight="Bold"
                                 Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock Text="Agrega productos desde la tienda" FontSize="14"
                                 Foreground="#95A5A6" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Items del carrito -->
                <ItemsControl ItemsSource="{Binding CartItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="#BDC3C7" BorderThickness="1"
                                    CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Imagen del producto -->
                                    <Border Grid.Column="0" Background="#F8F9FA" CornerRadius="5" Width="90" Height="90">
                                        <Image Source="{Binding ImagenProducto}" Stretch="Uniform" Margin="5"/>
                                    </Border>

                                    <!-- InformaciÃ³n del producto -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                                        <TextBlock Text="{Binding NombreProducto}"
                                                 FontSize="16" FontWeight="Bold"
                                                 Foreground="#2C3E50" Margin="0,0,0,5"/>
                                        <TextBlock FontSize="14" Foreground="#7F8C8D">
                                            <Run Text="Precio unitario: "/>
                                            <Run Text="{Binding PrecioUnitario, StringFormat=C2}" FontWeight="Bold"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Controles de cantidad -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                                        <Button Content="âˆ’" Width="30" Height="30"
                                                Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#E74C3C" Foreground="White"
                                                FontSize="16" FontWeight="Bold"
                                                BorderThickness="0" Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#C0392B"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <TextBlock Text="{Binding Cantidad}" FontSize="18" FontWeight="Bold"
                                                 Foreground="#2C3E50" VerticalAlignment="Center"
                                                 Margin="15,0" MinWidth="30" TextAlignment="Center"/>

                                        <Button Content="+" Width="30" Height="30"
                                                Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#27AE60" Foreground="White"
                                                FontSize="16" FontWeight="Bold"
                                                BorderThickness="0" Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#229954"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>

                                    <!-- Subtotal -->
                                    <TextBlock Grid.Column="3" Text="{Binding Subtotal, StringFormat=C2}"
                                             FontSize="18" FontWeight="Bold"
                                             Foreground="#27AE60" VerticalAlignment="Center"
                                             Margin="0,0,20,0" MinWidth="80" TextAlignment="Right"/>

                                    <!-- BotÃ³n eliminar -->
                                    <Button Grid.Column="4" Content="ðŸ—‘ï¸"
                                            Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Width="40" Height="40"
                                            Background="#E74C3C" Foreground="White"
                                            FontSize="16"
                                            BorderThickness="0" Cursor="Hand"
                                            ToolTip="Eliminar del carrito">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C0392B"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Resumen y botones de acciÃ³n -->
        <Border Grid.Row="2" Background="White" BorderBrush="#BDC3C7" BorderThickness="1,1,1,0"
                Padding="20" CornerRadius="5,5,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Resumen del total -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Total a Pagar:" FontSize="16" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding TotalAmount, StringFormat=C2}"
                             FontSize="32" FontWeight="Bold" Foreground="#27AE60"/>
                </StackPanel>

                <!-- Botones de acciÃ³n -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Vaciar Carrito"
                            Command="{Binding ClearCartCommand}"
                            Height="50" Padding="20,0" Margin="0,0,10,0"
                            Background="#E74C3C" Foreground="White"
                            FontSize="14" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C0392B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Finalizar Compra"
                            Command="{Binding CheckoutCommand}"
                            Height="50" Padding="30,0"
                            Background="#27AE60" Foreground="White"
                            FontSize="16" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
